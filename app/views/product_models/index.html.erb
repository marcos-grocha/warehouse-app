<br>
<section>
    <%= link_to 'Cadastrar Novo', new_product_model_path %>
    <% if @product_models.any? %>
        <% @product_models.each do |pm| %>
            <div>
                <h2><%= link_to pm.name, pm %></h2>
                <dl>
                    <dt>SKU: </dt>
                    <dd><%= pm.sku %></dd>
                    <dt>Fornecedor: </dt>
                    <dd><%= pm.supplier.brand_name %></dd>
                </dl>
            </div>
        <% end %>
    <% else %>
        <p>Nenhum modelo de produto cadastrado</p>
    <% end %>
    <div>
        <%= link_to 'Voltar', root_path %>
    </div>
</section>